<div class="card">
  <div class="card-body">
    <div class="mx-auto text-center"><h2>Sign Up</h2></div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="d-flex flex-row p-2 justify-content-around">

        <div class="p-2">

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%" %>
            </div>

            <div class="form-group">
              <%= f.label :name %><br />
              <%= f.text_field :name, style: "width: 100%" %>
            </div>

        </div>
        <div class="p-2">
          <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%" %>
            </div>

            <div class="form-group">
              <%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
            </div>
            
            <div class="auth-links block"> 
              <%= render "devise/shared/links" %>
            </div> 
        </div>
        <% end %>
      </div>
  </div>
</div>