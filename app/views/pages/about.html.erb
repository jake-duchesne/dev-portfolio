    <div class="card">
        <h1 class="pl-2">About Me</h1>

        <div class="d-flex flex-row">
            <div class="p-2 profile-img">
                <%= image_tag "ProfileNew.jpg", width: 300, alt: "profile-headshot" %>
            </div>

            <div class="p-2">
                <h3>Hello!</h3>
            </div>
        </div>

        <p>
            <button class="btn btn-info ml-2" type="button" data-toggle="collapse" data-target="#jobHistory" aria-expanded="false" aria-controls="jobHistory">
                Job History
