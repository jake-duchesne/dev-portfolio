<%= form_with(model: @portfolio_item, local: true) do |form| %>

<div class="form-row">
    <div class="form-group col-md-6">
        <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="form-group">
            <%= form.label :subtitle %>
            <%= form.text_field :subtitle, class: 'form-control' %>
        </div>
    </div>
</div>

<div class="form-row">
    <div class="form-group col-md-6">
        <div class="form-group">
            <%= form.file_field :thumb_image %>
        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="form-group">
            <%= form.file_field :main_image %>
        </div>
    </div>
</div>


<div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 15 %>
</div>

<hr>

<h2>Technologies Used: </h2>

<div class="form-row">
    <%= form.fields_for :technologies do |tech_form| %>
    <div class="form-group col-md-4">
        <%= tech_form.label :name %>
        <%= tech_form.text_field :name, class: 'form-control' %>
    </div>
    <% end %>
</div>

<div class="form-group">
    <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
</div>

<% end %>